@model List<Urun>

<div class="container">
    <div class="row mb-2">
        <div class="col-sm-6"><strong>Ürün Güncelle</strong></div>
        <div class="col-sm-2"><strong>Fiyat</strong></div>
        <div class="col-sm-2"><strong>Stok</strong></div>
    </div>
    @foreach (var urun in Model)
    {
        <!-- ürün form -->
        <form class="row g-3 mb-1" method="post" action="/Home/UrunGuncelle">
            <div class="col-sm-6">
                <input type="text" class="form-control" name="Ad" value="@urun.Ad" placeholder="Ürün Adı">
            </div>
            <div class="col-sm-2">
                <input type="number" class="form-control" name="Fiyat" value="@urun.Fiyat" placeholder="Fiyat">
            </div>
            <div class="col-sm-2">
                <input type="number" class="form-control" name="Stok" value="@urun.Stok" placeholder="Stok">
            </div>
            <div class="col-sm-2 align-self-end">
                <button class="btn btn-primary">Güncelle</button>
            </div>
        </form>
        <!-- ürün form bitiş -->
    }
</div>
<h3>Yeni Ürün</h3>
<!-- ürün form -->
<form class="row g-3 mb-1" method="post" action="/Home/UrunEkle">
    <div class="col-sm-6">
        <input type="text" class="form-control" name="Ad" placeholder="Ürün Adı">
    </div>
    <div class="col-sm-2">
        <input type="number" class="form-control" name="Fiyat" placeholder="Fiyat">
    </div>
    <div class="col-sm-2">
        <input type="number" class="form-control" name="Stok" placeholder="Stok">
    </div>
    <div class="col-sm-2 align-self-end">
        <button class="btn btn-primary">Ekle</button>
    </div>
</form>
